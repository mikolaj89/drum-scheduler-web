
{
  "name": "drum-scheduler",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev:admin-client": "pnpm --filter admin-client dev",
    "dev:api": "pnpm --filter api-node dev",
    "dev:app-rn": "pnpm --filter drum-scheduler-app start",
    "dev:app-android": "pnpm --filter drum-scheduler-app android",
    "dev:app-rn+sdk": "concurrently -k -n sdk,metro \"pnpm -C ./packages/sdk dev\" \"pnpm --filter drum-scheduler-app start\"",
    "build:packages": "pnpm -r --filter ./packages/** run build",
    "build:db-schema": "pnpm -C ./packages/db-schema build",
    "build:contracts": "pnpm -C ./packages/contracts build",
    "build:sdk": "pnpm -C ./packages/sdk build",
    "build:admin-client": "pnpm --filter admin-client build",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "kill:all": "node ./scripts/kill-all.mjs",
    "kill:all:dry": "node ./scripts/kill-all.mjs --dry-run"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "turbo": "^1.13.4",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@drum-scheduler/contracts": "workspace:^",
    "@drum-scheduler/sdk": "workspace:^",
    "@drum-scheduler/config": "workspace:^"
  }
}